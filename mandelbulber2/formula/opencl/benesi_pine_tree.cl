	if (z.y + z.z > 0.0f)
		t = native_divide(t, native_sqrt(z.y + z.z));
	else
		t = 1.0f;

	z.x = mad(fractal->transformCommon.constantMultiplier100.x, c.x, (z.x - z.y - z.z));
